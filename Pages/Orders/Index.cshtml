@page "/"
@model IndexModel
@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="text-primary fw-bold"><i class="bi bi-bag-check-fill"></i> Danh sách đơn hàng</h2>
        <p class="text-muted small mb-0">Quản lý toàn bộ đơn hàng, doanh thu và trạng thái giao vận.</p>
    </div>
    <a asp-page="Create" class="btn btn-primary btn-lg shadow-sm">
        <i class="bi bi-plus-lg"></i> Thêm đơn mới
    </a>
</div>

<div class="row mb-4 g-3">
    <div class="col-md-3">
        <div class="card bg-primary text-white shadow-sm">
            <div class="card-body p-3">
                <small class="text-white-50">Tổng đơn hàng</small>
                <h3 class="mb-0 fw-bold">@Model.Orders.Count</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white shadow-sm">
            <div class="card-body p-3">
                <small class="text-white-50">Doanh thu dự kiến</small>
                <h3 class="mb-0 fw-bold">@Model.Orders.Sum(x => x.TotalAmount).ToString("#,##0") k</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white shadow-sm">
            <div class="card-body p-3">
                <small class="text-white-50">Lợi nhuận ước tính</small>
                <h3 class="mb-0 fw-bold">@Model.Orders.Sum(x => x.Profit).ToString("#,##0") k</h3>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-3">Đơn hàng</th>
                        <th>Khách hàng</th>
                        <th>Sản phẩm & Kho</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-end">Tài chính (VNĐ)</th>
                        <th class="text-end pe-3">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Orders)
                    {
                        // Tính toán số tiền còn thiếu
                        var remaining = item.TotalAmount - item.Deposit;

                        <tr>
                            <td class="ps-3">
                                <div class="fw-bold text-primary">#@item.Code</div>
                                <div class="small text-muted"><i class="bi bi-calendar3"></i> @(item.OrderDate?.ToString("dd/MM/yyyy"))</div>
                                <div class="mt-1">
                                    <span class="badge bg-light text-dark border">@item.Source</span>
                                </div>
                            </td>

                            <td>
                                <div class="fw-bold">@item.CustomerName</div>

                                @if (!string.IsNullOrEmpty(item.PhoneNumber))
                                {
                                    <div class="small">
                                        <a href="tel:@item.PhoneNumber" class="text-decoration-none text-muted">
                                            <i class="bi bi-telephone-fill text-success" style="font-size: 10px;"></i> @item.PhoneNumber
                                        </a>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(item.ShippingAddress))
                                {
                                    <div class="small text-muted text-truncate" style="max-width: 150px;" title="@item.ShippingAddress">
                                        <i class="bi bi-geo-alt-fill text-danger" style="font-size: 10px;"></i> @item.ShippingAddress
                                    </div>
                                }
                            </td>

                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="me-2">
                                        <div class="fw-bold text-dark">@item.ProductName</div>
                                        <div class="small text-muted">
                                            @if (!string.IsNullOrEmpty(item.Color))
                                            {
                                                <span>Màu: @item.Color</span>
                                            }
                                            @if (!string.IsNullOrEmpty(item.Size))
                                            {
                                                <span class="mx-1">|</span>
                                                <span>Size: @item.Size</span>
     }
                                            <span class="mx-1">|</span> <span>SL: <strong>@item.Quantity</strong></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-1">
                                    @if (!string.IsNullOrEmpty(item.Warehouse))
                                    {
                                        <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                            <i class="bi bi-box-seam"></i> @item.Warehouse
                                        </span>
                                    }
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary border">
                                        @item.Category
                                    </span>
                                </div>
                            </td>

                            <td class="text-center">
                                @{
                                    string statusClass = "bg-secondary";
                                    if (item.Status == "Chờ đặt") statusClass = "bg-warning text-dark";
                                    else if (item.Status == "Đã đặt") statusClass = "bg-primary";
                                    else if (item.Status == "Đang về") statusClass = "bg-info text-dark";
                                    else if (item.Status == "Đã về") statusClass = "bg-warning";
                                    else if (item.Status == "Đã giao") statusClass = "bg-success";
                                    else if (item.Status == "Hủy") statusClass = "bg-danger";
                                }
                                <span class="badge @statusClass rounded-pill px-3 py-2">@item.Status</span>
                            </td>

                            <td class="text-end">
                                <div class="fw-bold fs-6">@item.TotalAmount.ToString("N0")</div>

                                @if (item.Deposit > 0)
                                {
                                    <div class="small text-success"><i class="bi bi-check2"></i> Đã cọc: @item.Deposit.ToString("N0")</div>
                                }

                                @if (remaining > 0 && item.Status != "Hủy")
                                {
                                    <div class="small text-danger fw-bold">Còn thiếu: @remaining.ToString("N0")</div>
                                }
                                else if (remaining <= 0 && item.TotalAmount > 0)
                                {
                                    <div class="small text-success fw-bold">Đã thanh toán</div>
                                }

                                <div class="border-top mt-1 pt-1 small text-muted">
                                    Lãi: <span class="text-success fw-bold">+@item.Profit.ToString("N0")</span>
                                </div>
                            </td>

                            <td class="text-end pe-3">
                                <div class="btn-group">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-light btn-sm text-primary border" title="Sửa">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" style="display:inline;" onsubmit="return confirm('Xóa đơn hàng này?');">
                                        <button type="submit" class="btn btn-light btn-sm text-danger border" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>