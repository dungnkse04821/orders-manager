@page "/"
@model IndexModel
@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Danh sách đơn hàng</h1>
    <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Thêm đơn mới</a>
</div>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Ngày</th>
                <th class="text-center">Trạng thái</th>
                <th>Khách hàng</th>
                <th>Sản phẩm</th>
                <th>Giá bán</th>
                <th>SL</th>
                <th>Tổng tiền</th>
                <th>Lợi nhuận</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Orders)
            {
                <tr>
                    <td>@(item.OrderDate?.ToString("dd/MM/yyyy"))</td>

                    <td class="text-center">
                        @if (item.Status == "Chờ đặt")
                        {
                            <span class="badge bg-warning text-dark">@item.Status</span>
                        }
                        else if (item.Status == "Hủy")
                        {
                            <span class="badge bg-danger">@item.Status</span>
                        }
                        else if (item.Status == "Đã giao")
                        {
                            <span class="badge bg-success">@item.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">@item.Status</span>
                        }
                    </td>
                    <td>@item.CustomerName</td>
                    <td>
                        <span class="badge bg-info text-dark">@item.Source</span>
                        @item.ProductName
                        <small class="text-muted d-block">(@item.Color - @item.Size)</small>
                    </td>
                    <td class="text-end">@item.SellingPrice.ToString("N0")</td>
                    <td class="text-center">@item.Quantity</td>
                    <td class="text-end fw-bold">@item.TotalAmount.ToString("N0")</td>
                    <td class="text-end text-success">@item.Profit.ToString("N0")</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id"
                                  style="display:inline;"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa đơn này không?');">

                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>