@page
@model OrdersManager.Pages.Orders.CreateModel
@{
    ViewData["Title"] = "Thêm đơn hàng";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-cart-plus"></i> Thêm đơn hàng mới</h2>
</div>
<hr />

<form method="post">
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-7">

            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="bi bi-box-seam"></i> 1. Sản phẩm
                </div>
                <div class="card-body bg-light">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-primary">Tìm nhanh sản phẩm:</label>
                        <select id="ddlQuickProduct" class="form-select select2-product">
                            <option value="">-- Gõ tên hoặc mã SKU --</option>
                            @foreach (var p in Model.ProductList)
                            {
                                <option value="@p.Sku">@p.DisplayText</option>
                            }
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Order.Code" class="form-label">Mã Code <span class="text-danger">*</span></label>
                            <input asp-for="Order.Code" class="form-control fw-bold" id="txtCode" placeholder="Mã SP" required />
                        </div>
                        <div class="col-md-8 mb-3">
                            <label asp-for="Order.ProductName" class="form-label">Tên sản phẩm</label>
                            <input asp-for="Order.ProductName" class="form-control" id="txtName" placeholder="Tên sản phẩm" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Order.Category" class="form-label">Loại hàng</label>
                            <div class="input-group">
                                <select asp-for="Order.Category" class="form-select select2-dropdown" id="ddlCategory">
                                    <option value="">-- Chọn --</option>
                                    @foreach (var item in Model.Categories)
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                                <button type="button" class="btn btn-outline-secondary" onclick="openModal('Category', 'Loại hàng')"><i class="bi bi-plus"></i></button>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Order.Color" class="form-label">Màu sắc</label>
                            <input asp-for="Order.Color" class="form-control" placeholder="Màu" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Order.Size" class="form-label">Kích thước</label>
                            <input asp-for="Order.Size" class="form-control" placeholder="Size" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Order.Source" class="form-label">Nguồn nhập</label>
                            <div class="input-group">
                                <select asp-for="Order.Source" class="form-select select2-dropdown" id="ddlSource">
                                    <option value="">-- Chọn nguồn --</option>
                                    @foreach (var item in Model.Sources)
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                                <button type="button" class="btn btn-outline-secondary" onclick="openModal('Source', 'Nguồn hàng')"><i class="bi bi-plus"></i></button>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Order.Warehouse" class="form-label">Kho hàng</label>
                            <div class="input-group">
                                <select asp-for="Order.Warehouse" class="form-select select2-dropdown" id="ddlWarehouse">
                                    <option value="">-- Chọn kho --</option>
                                    @foreach (var item in Model.Warehouses)
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                                <button type="button" class="btn btn-outline-secondary" onclick="openModal('Warehouse', 'Kho')"><i class="bi bi-plus"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-success text-white fw-bold">
                    <i class="bi bi-currency-dollar"></i> 3. Tài chính
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Order.SellingPrice" class="form-label">Giá bán</label>
                            <div class="input-group">
                                <input asp-for="Order.SellingPrice" class="form-control fw-bold text-primary fs-5" type="number" id="txtSellPrice" />
                                <span class="input-group-text">.000 đ</span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Order.Quantity" class="form-label">Số lượng</label>
                            <input asp-for="Order.Quantity" class="form-control fw-bold text-center fs-5" type="number" min="1" value="1" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Order.Deposit" class="form-label">Đã cọc/Thanh toán</label>
                            <div class="input-group">
                                <input asp-for="Order.Deposit" class="form-control" type="number" />
                                <span class="input-group-text">.000 đ</span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Order.Discount" class="form-label">Giảm giá</label>
                            <div class="input-group">
                                <input asp-for="Order.Discount" class="form-control" type="number" />
                                <span class="input-group-text">.000 đ</span>
                            </div>
                        </div>
                    </div>
                    <input asp-for="Order.ImportPrice" type="hidden" id="txtImportPrice" value="0" />
                </div>
            </div>

        </div>

        <div class="col-lg-5">

            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-info text-white fw-bold">
                    <i class="bi bi-person-circle"></i> 2. Khách hàng
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-primary">Tìm khách hàng:</label>
                        <select id="ddlQuickCustomer" class="form-select select2-customer">
                            <option value="">-- Gõ Tên hoặc SĐT --</option>
                            @foreach (var c in Model.CustomerList)
                            {
                                <option value="@c.PhoneNumber"
                                        data-name="@c.FullName"
                                        data-address="@c.Address">
                                    @c.FullName - @c.PhoneNumber
                                </option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Order.PhoneNumber" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                        <input asp-for="Order.PhoneNumber" class="form-control fw-bold" id="txtPhone" placeholder="SĐT khách..." required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Order.CustomerName" class="form-label">Tên khách hàng</label>
                        <input asp-for="Order.CustomerName" class="form-control" id="txtCustName" placeholder="Tên khách..." />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Order.ShippingAddress" class="form-label">Địa chỉ giao hàng</label>
                        <textarea asp-for="Order.ShippingAddress" class="form-control" id="txtAddress" rows="3" placeholder="Địa chỉ chi tiết..."></textarea>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-secondary text-white fw-bold">
                    <i class="bi bi-info-circle"></i> 4. Thông tin khác
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Order.Status" class="form-label">Trạng thái đơn</label>
                        <select asp-for="Order.Status" class="form-select select2-dropdown" id="ddlStatus">
                            @foreach (var s in OrdersManager.Models.OrderStatusList.All)
                            {
                                <option value="@s">@s</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Order.OrderDate" class="form-label">Ngày đặt hàng</label>
                        <input asp-for="Order.OrderDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                </div>
            </div>

        </div>
    </div>

    <hr class="mt-4" />
    <div class="d-flex justify-content-end gap-2">
        <a asp-page="./Index" class="btn btn-secondary btn-lg">Hủy bỏ</a>
        <button type="submit" class="btn btn-success btn-lg"><i class="bi bi-check-circle"></i> Lưu Đơn Hàng</button>
    </div>
</form>

<div class="modal fade" id="addAttrModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Thêm mới <span id="lblAttrType"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="hdnAttrType" />
                <label class="form-label">Nhập tên mới:</label>
                <input type="text" id="txtAttrValue" class="form-control" placeholder="Ví dụ: Kho Hà Nội..." />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="saveAttribute()">Lưu lại</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var myModal;

        $(document).ready(function() {
            // --- 1. KHỞI TẠO CÁC DROPDOWN CƠ BẢN ---
            $('.select2-dropdown').select2({
                theme: 'bootstrap-5', width: 'style', placeholder: "Chọn..."
            });

            myModal = new bootstrap.Modal(document.getElementById('addAttrModal'));

            // ===============================================
            // A. TÌM KIẾM SẢN PHẨM (Code chuẩn)
            // ===============================================
            var $productSelect = $('.select2-product').select2({
                theme: 'bootstrap-5',
                placeholder: "Gõ Mã SP để tìm hoặc nhập mới...",
                allowClear: true,
                tags: true,
                createTag: function (params) {
                    var term = $.trim(params.term);
                    if (term === '') return null;
                    return { id: term, text: term + ' (Sản phẩm mới)', newOption: true }
                }
            });

            // Khi chọn sản phẩm
            $productSelect.on('select2:select', function (e) {
                var data = e.params.data;
                var selectedSku = data.id;

                if (data.newOption) {
                    // Sản phẩm mới
                    $('#txtCode').val(selectedSku.toUpperCase());
                    $('#txtName').val('').attr('placeholder', 'Nhập tên sản phẩm mới...').focus();
                    $('#txtSellPrice').val(0);
                    $('#txtImportPrice').val(0);
                    $('select[name="Order.Category"]').val('').trigger('change');
                } else {
                    // Sản phẩm cũ -> Gọi Ajax
                    $('#txtName').attr('placeholder', 'Đang tải...');
                    $.ajax({
                        url: '?handler=ProductInfo',
                        type: "GET",
                        data: { sku: selectedSku },
                        success: function (response) {
                            if (response.success) {
                                $('#txtCode').val(selectedSku);
                                $('#txtName').val(response.name);
                                $('#txtSellPrice').val(response.sellPrice);
                                $('#txtImportPrice').val(response.importPrice || 0);
                                $('select[name="Order.Category"]').val(response.category).trigger('change');
                                $('input[name="Order.Quantity"]').select();
                                if (response.source) {
                                    $('#ddlSource').val(response.source).trigger('change');
                                }
                                if (response.warehouse) {
                                    $('#ddlWarehouse').val(response.warehouse).trigger('change');
                                }
                            }
                        }
                    });
                }
            });

            // Khi xóa chọn sản phẩm
            $productSelect.on('select2:clear', function () {
                $('#txtCode').val(''); $('#txtName').val(''); $('#txtSellPrice').val('0');
            });


            // ===============================================
            // B. CẤU HÌNH TÌM KIẾM KHÁCH HÀNG (NÂNG CẤP)
            // ===============================================
            var $custSelect = $('.select2-customer').select2({
                theme: 'bootstrap-5',
                placeholder: "Gõ Tên hoặc SĐT để tìm/thêm mới...",
                allowClear: true,
                tags: true, // <--- CHO PHÉP NHẬP MỚI
                createTag: function (params) {
                    var term = $.trim(params.term);
                    if (term === '') return null;

                    // Kiểm tra xem người dùng đang nhập SỐ hay CHỮ
                    var isPhone = /^[0-9+]+$/.test(term);
                    var label = isPhone ? " (SĐT Mới)" : " (Tên Khách Mới)";

                    return {
                        id: term,
                        text: term + label,
                        newOption: true,
                        isPhone: isPhone // Đánh dấu để tý xử lý
                    };
                }
            });

            // XỬ LÝ KHI CHỌN KHÁCH HÀNG
            $custSelect.on('select2:select', function (e) {
                var data = e.params.data;
                var $option = $(data.element); // Element <option> thật (nếu là khách cũ)

                if (data.newOption) {
                    // --- TRƯỜNG HỢP 1: KHÁCH MỚI (NHẬP TAY) ---
                    var term = data.id;

                    if (data.isPhone) {
                        // Nếu nhập SỐ: Điền vào ô SĐT, xóa ô Tên để nhập
                        $('#txtPhone').val(term);
                        $('#txtCustName').val('').attr('placeholder', 'Nhập tên khách...').focus();
                    } else {
                        // Nếu nhập CHỮ: Điền vào ô Tên, xóa ô SĐT để nhập
                        $('#txtCustName').val(term);
                        $('#txtPhone').val('').attr('placeholder', 'Nhập số điện thoại...').focus();
                    }
                    // Xóa địa chỉ cũ
                    $('#txtAddress').val('');
                }
                else {
                    // --- TRƯỜNG HỢP 2: KHÁCH CŨ (CÓ TRONG LIST) ---
                    var phone = data.id;
                    var name = $option.data('name');
                    var address = $option.data('address');

                    $('#txtPhone').val(phone);
                    $('#txtCustName').val(name);
                    $('#txtAddress').val(address);

                    // Focus sang ô Sản phẩm để nhập liệu tiếp cho nhanh
                    $productSelect.select2('open');
                }
            });

            // Khi xóa chọn khách
            $custSelect.on('select2:clear', function () {
                $('#txtPhone').val('');
                $('#txtCustName').val('');
                $('#txtAddress').val('');
            });


            // ===============================================
            // C. LOGIC ĐỒNG BỘ KHI LOAD TRANG (CHO TRANG EDIT)
            // ===============================================

            // 1. Đồng bộ Sản phẩm cũ
            var currentCode = $('#txtCode').val();
            if (currentCode) {
                    // Check xem mã này có trong list không, nếu không tạo option ảo
                    if ($productSelect.find("option[value='" + currentCode + "']").length) {
                        $productSelect.val(currentCode).trigger('change.select2');
                    } else {
                        var productName = $('#txtName').val();
                        var newOption = new Option(productName + " (" + currentCode + ")", currentCode, true, true);
                        $productSelect.append(newOption).trigger('change');
                    }
            }

            // 2. Đồng bộ Khách hàng cũ
            var currentPhone = $('#txtPhone').val();
            if (currentPhone) {
                // Nếu SĐT có trong list -> Chọn nó
                if ($custSelect.find("option[value='" + currentPhone + "']").length) {
                    $custSelect.val(currentPhone).trigger('change.select2');
                } else {
                    // Nếu chưa có (Khách vãng lai/mới), tạo option ảo để hiển thị
                    var currentName = $('#txtCustName').val();
                    var newOption = new Option(currentName + " - " + currentPhone, currentPhone, true, true);
                    $custSelect.append(newOption).trigger('change');
                }
            }
        });

        // --- D. CÁC HÀM MODAL (Giữ nguyên) ---
        function openModal(type, title) {
            $('#lblAttrType').text(title);
            $('#hdnAttrType').val(type); $('#txtAttrValue').val('');
            myModal.show(); setTimeout(() => $('#txtAttrValue').focus(), 500);
        }

        function saveAttribute() {
            var type = $('#hdnAttrType').val();
            var value = $('#txtAttrValue').val();
            if(!value) { alert("Nhập tên!"); return; }
            var token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                type: "POST", url: "?handler=AddAttribute",
                data: { type: type, value: value },
                headers: { "RequestVerificationToken": token },
                success: function (res) {
                    if (res.success) {
                        $('#ddl' + type).append(new Option(value, value, true, true)).trigger('change');
                        myModal.hide();
                    } else alert("Lỗi: " + (response.message || "Không thể lưu"));
                }
            });
        }
    </script>
}