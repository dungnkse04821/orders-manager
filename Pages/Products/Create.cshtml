@page
@model OrdersManager.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container mt-3" style="max-width: 600px;">
    <h3>Thêm sản phẩm mới</h3>
    <hr />
    <form method="post">
        <div class="mb-3">
            <label asp-for="Product.Sku" class="form-label fw-bold">Mã SKU (*)</label>
            <input asp-for="Product.Sku" class="form-control text-uppercase" placeholder="VD: AO-THUN-01" required />
            <span asp-validation-for="Product.Sku" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Name" class="form-label">Tên sản phẩm</label>
            <input asp-for="Product.Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Product.Category" class="form-label">Loại hàng</label>
            <select asp-for="Product.Category" class="form-select">
                @foreach (var c in Model.Categories)
                {
                    <option value="@c">@c</option>
                }
            </select>
        </div>

        <div class="row">
            <div class="col-6 mb-3">
                <label asp-for="Product.ImportPrice" class="form-label">Giá nhập (k)</label>
                <input asp-for="Product.ImportPrice" class="form-control" type="number" />
            </div>
            <div class="col-6 mb-3">
                <label asp-for="Product.SellingPrice" class="form-label">Giá bán (k)</label>
                <input asp-for="Product.SellingPrice" class="form-control" type="number" />
            </div>
        </div>

        <button type="submit" class="btn btn-success w-100 mt-3">Lưu sản phẩm</button>
        <a asp-page="./Index" class="btn btn-link w-100 text-center text-decoration-none mt-2">Quay lại</a>
    </form>
</div>