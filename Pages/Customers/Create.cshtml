@page
@model OrdersManager.Pages.Customers.CreateModel
@{
    ViewData["Title"] = "Thêm khách hàng";
}

<div class="container mt-4">
    <h2>Thêm khách hàng mới</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Customer.FullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                    <input asp-for="Customer.FullName" class="form-control" required />
                    <span asp-validation-for="Customer.FullName" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Customer.PhoneNumber" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                    <input asp-for="Customer.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Customer.PhoneNumber" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Customer.Address" class="form-label"> Địa chỉ <span class="text-danger">*</span></label>
                    <input asp-for="Customer.Address" class="form-control" />
                    <span asp-validation-for="Customer.Address" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Customer.Reference" class="form-label"></label>
                    <input asp-for="Customer.Reference" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Customer.Note" class="form-label"></label>
                    <textarea asp-for="Customer.Note" class="form-control" rows="3"></textarea>
                </div>

                <button type="submit" class="btn btn-success">Lưu lại</button>
                <a asp-page="./Customer" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}