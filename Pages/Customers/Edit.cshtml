@page
@model OrdersManager.Pages.Customers.EditModel
@{
    ViewData["Title"] = "Sửa khách hàng";
}

<div class="container mt-4">
    <h2>Cập nhật thông tin khách hàng</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="Customer.Id" />

                <div class="mb-3">
                    <label asp-for="Customer.FullName" class="form-label"></label>
                    <input asp-for="Customer.FullName" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Customer.PhoneNumber" class="form-label"></label>
                    <input asp-for="Customer.PhoneNumber" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Customer.Address" class="form-label"></label>
                    <input asp-for="Customer.Address" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Customer.Note" class="form-label"></label>
                    <textarea asp-for="Customer.Note" class="form-control" rows="3"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>